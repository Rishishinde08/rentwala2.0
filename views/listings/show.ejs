<%- layout("layouts/boilerplate.ejs") %>

<body>
    <h1>Details</h1>
    <p><%= listing.title %></p>
    <p><%= listing.description %></p>
    <p> &#8377; <%= listing.price.toLocaleString("en-IN") %></p>
    <p><%= listing.location %></p>
    <p><%= listing.country %></p>
    <p><%= listing.image %></p>
    <br>
    <form action="/listings/<%= listing._id %>/edit" method="GET"><button>Edit</button></form>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST"><button>Delete</button></form>
</body>
